@{
  Layout = "_Layout";
}
<div class="container">
  <h1>Specialties</h1>
  <form>
    @if (@Model.Count == 0)
    {
      <h4>No Specialties has been added yet</h4>
    }
    else
    {
      @foreach (var specialty in Model)
      {
        <ul>
          <h4><a href='/specialties/@specialty.GetId()'>@specialty.GetDescription()</a></h4>
        </ul>
      }
    }
    <br>
    <a href="/specialties/new" class="btn btn-info">Add new Specialty</a>
    <a href="/"class="btn btn-danger" >Back Home</a>
  </form>
</div>
